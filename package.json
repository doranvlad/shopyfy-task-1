{
  "name": "shopify-foundation-theme",
  "description": "Modern Shopify theme using Shopify Theme Lab, Liquid, Vue and Tailwind CSS",
  "author": "Sergej Samsonenko",
  "version": "4.5.0",
  "license": "MIT",
  "scripts": {
    "start": "run-p -sr shopify:dev webpack:watch",
    "deploy": "run-s webpack:build && shopify theme push --path=./shopify",
    "deploy:new": "run-s webpack:build && shopify theme push --path=./shopify --unpublished",
    "webpack:watch": "cross-env NODE_ENV=development BROWSERSLIST_ENV=development BROWSERSLIST_CONFIG=.config/.browserslistrc webpack --config .config/webpack/webpack.dev.js --watch --progress",
    "webpack:build": "cross-env NODE_ENV=production BROWSERSLIST_ENV=production BROWSERSLIST_CONFIG=.config/.browserslistrc webpack --config .config/webpack/webpack.prod.js --progress",
    "shopify:dev": "shopify theme dev --path=./shopify --store=store.myshopify.com --store-password=password --theme-editor-sync",
    "shopify:pull": "shopify theme pull --path=./shopify",
    "shopify:pull-json": "shopify theme pull --path=./shopify -o templates/ -o config/settings_data.json -o locales/",
    "lint": "run-s -c lint:*",
    "lint:js": "eslint src/**/*.{js,vue} --config .config/.eslintrc.js",
    "lint:css": "stylelint src/**/*.{vue,css,sass,scss} --config .config/.stylelintrc.js",
    "lint:shopify": "shopify theme check --path=./shopify",
    "fix": "run-s -c fix:*",
    "fix:js": "eslint src/**/*.{js,vue} --config .config/.eslintrc.js --fix",
    "fix:css": "stylelint src/**/*.{vue,css,sass,scss} --config .config/.stylelintrc.js --fix",
    "fix:shopify": "shopify theme check --path=./shopify -a"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.10.5",
    "@alpinejs/intersect": "^3.10.5",
    "@caneara/iodine": "^8.3.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "alpinejs": "^3.10.5",
    "animate.css": "^4.1.1",
    "async-alpine": "^1.0.0",
    "axios": "^1.2.2",
    "js-cookie": "^3.0.5",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@shopify/prettier-plugin-liquid": "^1.0.2",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.2.0",
    "eslint": "8.22.0",
    "eslint-plugin-vue": "^8.2.0",
    "eslint-webpack-plugin": "^3.1.1",
    "mini-css-extract-plugin": "^2.4.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-html": "^1.3.0",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-webpack-plugin": "^3.1.0",
    "url-loader": "^4.1.1",
    "webpack": ">=5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  }
}
